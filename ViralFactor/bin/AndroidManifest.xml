<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viralfactor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.viralfactor.ui.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.viralfactor.ui.Instructions" >
        </activity>
        <activity android:name="com.viralfactor.ui.MainMenu" >
        </activity>
        <activity android:name="com.viralfactor.ui.GameType" >
        </activity>
        <activity
            android:name="com.viralfactor.ui.PositiveCanvas"
            android:theme="@style/Theme.NoBackground" >
        </activity>
        <activity
            android:name="com.viralfactor.ui.NegativeCanvas"
            android:theme="@style/Theme.NoBackground" >
        </activity>
        <activity android:name="com.viralfactor.ui.HighScoreView" >
        </activity>
        <activity android:name="com.viralfactor.safe.sprite.JustForTesting" >
        </activity>
        <activity android:name="com.viralfactor.safe.sprite.GameTimerActivity" >
        </activity>
        <activity android:name="com.viralfactor.ui.GamePreferences" >
        </activity>
        <activity android:name="com.viralfactor.ui.MenuClass" >
        </activity>
        <activity android:name="com.viralfactor.ui.GameTypeMenu" >
        </activity>
    </application>

</manifest>